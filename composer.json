{
    "name": "dormilich/http-client",
    "description": "A request/response handler around a PSR-18 HTTP client.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bertold von Dormilich",
            "email": "dormilich@netscape.net"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Dormilich\\HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "testsuite": "phpdbg -qrr vendor/bin/phpunit"
    }
}
